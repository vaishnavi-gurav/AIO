{
  "name": "aio",
  "version": "1.0.0",
  "description": "All In One Booking Website",
  "main": "index.js",
  "scripts": {
    "watch:sass" : "node-sass sass/main.scss css/style.css -w",
    "dev-server" : "live-server",
    "start" : "npm-run-all --parallel watch:sass dev-server",

    "compile:sass" : "node-sass sass/main.scss css/style.comp.css",
    "prefix:css" : "postcss --use autoprefixer -b 'last 10 browsers' css/style.comp.css -o css/style.prefix.css",
    "compress:css" : "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css" : "npm-run-all compile:sass prefix:css compress:css" 
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vaishnavi-gurav/"
  },
  "keywords": [
    "sass",
    "flexbox",
    "css",
    "animations"
  ],
  "author": "Vaishnavidevi Gurav",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "concat": "^1.0.3",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1"
  },
  "dependencies": {
    "live-server": "^1.2.1"
  }
}
